{
  "name": "altfolio",
  "private": true,
  "description": "A portfolio tracking tool for alternative investments.",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:client": "cd client && vite",
    "build:client": "cd client && vite build",
    "dev:server": "cd server && tsx --watch index.ts",
    "build:server": "cd server && tsc",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build": "npm run build:client && npm run build:server",
    "start": "cd server && node dist/index.js",
    "seed": "cd server && tsx db/seed.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yml,yaml}\"",
    "test": "echo \"No tests yet\" && exit 0",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.11",
    "argon2": "^0.44.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "jose": "^6.1.2",
    "lucide-react": "^0.555.0",
    "mongoose": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^10.1.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/argon2": "^0.14.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.19.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.7.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.2.0"
  }
}
